{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord
{% endblock %}

{% block body %}
<div class="container">
	{% for item in snippets %}
		<div class="card col-4 col" style="width: 20rem;">
			<div class="card-body">
				<h4 class="card-title">{{item.title}}</h4>
				<h5 class="card-subtitle">{{item.user.username}}</h5>
				<p class="card-text">{{item.content|slice(0,80)}}</p>
				<p class="card-text">{{item.createdAt|date('d/m/Y')}}</p>
				{# <a class="card-link" href={{ path ('show-code',{ id: item.id })}}>Voir</a> #}
			</div>
		</div>
	{% endfor %}
	</div>
	{# {{ dump(snippets) }} #}
	{# display navigation #}
	<div class="navigation">
		{{ knp_pagination_render(snippets) }}
	</div>

{% endblock %}
